<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <title>[BETA] Choose Your Game @ViewBag.title</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/lib/uikit/css/uikit.min.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <script src="~/lib/jquery-3.3.1.min.js"></script>
</head>

<body>
    <main id="main" class="uk-background-cover login-main">
        <div class="uk-container uk-container-expand uk-flex uk-flex-wrap uk-text-center login-container">
            <div class="uk-margin-auto uk-flex-row uk-width-3-4 uk-light">
                <h1 class="uk-heading-line uk-text-center chasing-rabbits">
                    <span>Choose Your Game</span>
                </h1>
            </div>
            <div class="uk-margin-auto uk-margin-auto-vertical uk-flex-row uk-width-1-1@s uk-width-1-2@m uk-width-1-3@l">
                @if (ViewBag.Message != null)
                {
                    <div class="uk-alert-warning" uk-alert>
                        <a class="uk-alert-close" uk-close></a>
                        <p>@ViewBag.Message</p>
                    </div>
                }
                <div class="uk-card uk-card-default uk-card-body login-panel">
                    @RenderBody()
                </div>
                <div class="uk-margin-top">
                    <p class="uk-text-meta uk-light coolvetica-rg">&copy; COPYRIGHT 2018 - LEONARDO A. BEVILACQUA, TODOS OS DIREITOS RESERVADOS.</p>
                </div>
            </div>
        </div>
    </main>
    @RenderSection("Modals", required : false)
    <script src="~/lib/uikit/js/uikit.min.js"></script>
    <script src="~/lib/uikit/js/uikit-icons.min.js"></script>
    <script src="~/lib/jqueryFormValidator/jquery.form-validator.min.js"></script>
    <script src="~/js/script.js"></script>
    @RenderSection("Scripts", required : false)
</body>

</html>

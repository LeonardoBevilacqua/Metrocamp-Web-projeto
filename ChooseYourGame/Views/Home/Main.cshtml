<div class="uk-grid uk-padding" data-uk-grid>
    <div class="uk-width-1-3@m">
        <!-- card -->
        <div class="uk-card uk-card-hover uk-card-default uk-card-secondary uk-padding-remove uk-margin uk-margin-remove-top profiles-card">
            <div class="uk-card-header uk-background-cover uk-background-blend-multiply uk-background-primary uk-light" style="background-image: url('https://www.hdwallpapers.in/walls/bicycle-wide.jpg')">
                <div class="uk-grid-small uk-flex-middle" data-uk-grid>
                    <div class="uk-width-auto">
                        <!-- cyg.com/profiles -->
                        <a asp-controller="Profiles">
                            <img width="40" height="40" alt="user" src="https://dt.azadicdn.com/wp-content/plugins/all-in-one-seo-pack/images/default-user-image.png?200">
                        </a>
                    </div>
                    <div class="uk-width-expand">
                        <h2 class="uk-h4 uk-margin-remove-bottom">
                            <!-- cyg.com/profiles -->
                            <a asp-controller="Profiles">Perfil 1</a>
                        </h2>
                        <p class="uk-margin-remove-top">
                            <!-- cyg.com/blogs/search/userid -->
                            <a asp-controller="Blogs" asp-action="Search" asp-fragment="UserName">Blogs:</a> 25</p>
                    </div>
                </div>
            </div>
            <div class="uk-card-body">
                <div class="uk-grid uk-child-width-1-1@s uk-child-width-1-2@m uk-text-center" data-uk-grid>
                    <p class="" id="following-count">
                        <!-- cyg.com/profiles/following/id -->
                        <a asp-controller="Proflies" asp-action="Following" asp-fragment="Id">Seguindo</a>
                        <br>37</p>
                    <p class="" id="followers-count">
                        <!-- cyg.com/profiles/followers/id -->
                        <a asp-controller="Proflies" asp-action="Followers" asp-fragment="Id">Seguidores</a>
                        <br>21</p>
                </div>
            </div>
            <!-- cyg.com/blogs/create -->
            <a asp-controller="Blogs" asp-action="Create" class="uk-button uk-background-primary uk-width-1-1">Criar blog</a>
        </div>
        <!-- end card -->
    </div>

    <div class="uk-width-2-3@m">
        
        <article class="uk-article">
            <h1 class="uk-article-title">
                <!-- cyg.com/Blogs/view/id -->

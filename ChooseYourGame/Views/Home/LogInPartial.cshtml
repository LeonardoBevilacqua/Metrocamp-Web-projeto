@model LogInViewModel
<form asp-action="LogIn" asp-controller="Home" id="signin" class="uk-text-left">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="uk-margin">
        <input class="uk-input" asp-for="LoginAccount" placeholder="Username" data-validation="required">
    </div>

    <div class="uk-margin">
        <input class="uk-input" asp-for="LoginPassword" type="password" placeholder="Senha" data-validation="required">
    </div>

    <div class="uk-margin">
        <a href="#modal-password" data-uk-toggle>Esqueceu sua senha?</a>
    </div>

    <div class="uk-margin">
        <button class="uk-button uk-button-primary uk-width-1-1" type="submit">Entrar</button>
    </div>
</form>